<div class="container-fluid p-0">
	<div class="row m-0">
		{% if not basket %}
			<div class="col-xl-3 mb-2 pe-xl-4 position-fixed" id="block_filter">
				<div class="p-3 bg-light rounded" id="scroll-form-filter">
					<a class="btn btn-login d-block d-xl-none" data-bs-toggle="modal" data-bs-target="#modalFilter">
						<i class="fas fa-filter"></i> Filters
					</a>
					<div id="form_filter1" class="d-xl-block">{% include 'filter_table.twig' with {'values': values, 'metas':metas}%}</div>

				</div>
			</div>
		{% else %}
			<div class="col-xl-3 mb-2 pe-4 ">
				<div class="p-3">
					<div class="" >
						<p class="text-center">
							<a href='download_basket.php' class="btn text-download" target='_blank'><img src="./img/download.png" alt="download" class="img-fluid imgDownload"><br>Download Basket</a>
						</p>
					</div>
				</div>
			</div>
		{% endif %}
		<div class="{% if not basket %}offset-xl-3{% endif %} col-xl-9">
			<div class="table-responsive">
				<table class="table table-striped table-hover  ">
					<thead>
						<tr>
							{% for data in metas["record"] %}
								<th scope="col">{{data["label"]}}</th>
							{% endfor %}
						  	<th scope="col"></th>
							{% for data in metas["production"] %}
								<th scope="col">{{data["label"]}}</th>
							{% endfor %}
							{% for data in metas["speaker"] %}
								<th scope="col">{{data["label"]}}</th>
							{% endfor %}
						  	<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						{% for data in results %}
							{% include 'one_record.twig' with {'data': data, 'metas':metas} %}
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalFilter" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="modalFilterLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-fullscreen-sm-down">
		<div class="modal-content border-modal">
			<div class="modal-body">
				<div class="row">
					<div class="col-12">
						<button type="button" class="btn-close float-end" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
				</div>
				<div id="form_filter2"></div>
			</div>
		</div>
	</div>
</div>