<script type="text/javascript">
	$("#edit_form").validate();
	function add_to_basket(rid){
		$.ajax
		    ({ 
		        url: 'add_to_basket.php',
		        data: "rid="+rid+"&act=add",
		        type: 'post',
		        success: function(result)
		        {
		            $('#b_'+rid+'_add').hide();
					$('#b_'+rid+'_rem').show();
					massageAlert("success", "test fj nf  f nkf jdf jodlf kdf jl")
		        }
		    });
	}
	function rem_from_basket(rid){
		$.ajax
		    ({ 
		        url: 'add_to_basket.php',
		        data: "rid="+rid+"&act=rem",
		        type: 'post',
		        success: function(result)
		        {
		            $('#b_'+rid+'_rem').hide();
					$('#b_'+rid+'_add').show();
					massageAlert("success", "test")
		        }
		    });
	}
	function clear_elt(element_id){
		$('#'+element_id).val('');
	}
	$( function() {
		$( ".dp" ).datepicker({
				dateFormat: "dd/mm/yy",
			});
	  } );

	function lireAudio(record_id) {
		$('.audiosRecord').each(function(){
			$(this)[0].pause()
		})
		$('#audio'+record_id)[0].play()
	}

	function massageAlert(typealerte, message) {
		const Toast = Swal.mixin({
			toast: true,
			position: 'top',
			showConfirmButton: false,
			timer: 3000,
			timerProgressBar: true,
			didOpen: (toast) => {
				toast.addEventListener('mouseenter', Swal.stopTimer)
				toast.addEventListener('mouseleave', Swal.resumeTimer)
			}
		})
		Toast.fire({
			icon: typealerte,
			title: message
		})
	}
</script>

