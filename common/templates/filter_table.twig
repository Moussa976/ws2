<form id="edit_form" method="post">
	{% for key, data in metas %}
		{% if data|length > 0 %}
			<div>
				<h1 class="mt-2">Filters for table {{ key }}</h1>
				{% for meta in data %}

					<input class="form-control" type="hidden" name="field[{{meta.id}}]" value="{{ meta.field_name }}"/>

					{% if meta.type == 'txt' %}
						{% include 'one_filter_txt.twig' with {'meta':meta, 'value':values[meta.id]}%}
					{% endif %}
					{% if meta.type == 'int' or meta.type == 'float'  %}
						{% include 'one_filter_num.twig' with {'meta':meta, 'value':values[meta.id]}%}
					{% endif %}
					{% if meta.type == 'date'  %}
						{% include 'one_filter_date.twig' with {'meta':meta, 'value':values[meta.id]}%}
					{% endif %}
				{% endfor %}
			</div>
		{% endif %}
	{% endfor %}

</form>
<form method="post">
	<div class="d-flex mt-4">
		<div class="col px-1 text-center"><input type="button" class="btn green-button btn-lg" onclick="adds()" value="Search"/></div>
		<div class="col px-1 text-center"><input type="submit" class="btn btn-lg  red-button" value="Reset"/></div>
	</div>
</form>
