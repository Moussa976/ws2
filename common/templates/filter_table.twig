<form id="edit_form" method="post">
	{% for key, data in metas %}
		{% if data|length > 0 %}
			<div>
				<h1>Filters for table {{ key }}</h1>
				{% for meta in data %}

					<input class="form-control" type="hidden" name="field[{{meta.id}}]" value="{{ meta.field_name }}"/>

					{% if meta.type == 'txt' %}
						{% include 'one_filter_txt.twig' with {'meta':meta, 'value':values[meta.id]}%}
					{% endif %}
					{% if meta.type == 'int' or meta.type == 'float'  %}
						{% include 'one_filter_num.twig' with {'meta':meta, 'value':values[meta.id]}%}
					{% endif %}
					{% if meta.type == 'date'  %}
						{% include 'one_filter_date.twig' with {'meta':meta, 'value':values[meta.id]}%}
					{% endif %}
				{% endfor %}
			</div>
		{% endif %}
	{% endfor %}

	<div class="container w-50 px-auto green-button mb-2">
		<input type="submit" class="col btn btn-lg mx-auto w-100" value="Search"/>
	</div>

</form>
<form method="post">
	<div class="container w-50 mx-auto red-button">
		<input type="submit" class="col btn btn-lg mx-auto w-100" value="Reset"/>
	</div>
</form>
